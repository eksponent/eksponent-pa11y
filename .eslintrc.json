{
  "extends": [
    "plugin:prettier/recommended"
  ],
  "root": true,
  "env": {
    "browser": true,
    "es6": true,
    "node": true
  },
  "parserOptions": {
    "ecmaVersion": 8
  },
  "rules": {
    "no-multi-str": "error",
    "semi": ["error", "always"],
    "quotes": ["error", "double", { "avoidEscape": true }]
  }
}
